@using Axians.Web.Data
<div class="row select-tax">
    <div class="col-md-12">
        <div class="row mb-2">
            <div class="col-md-12">
                <span class="type-text">Tipo de Taxa</span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-12">
                <span class="type-label">Adicionar tipo de taxa</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <select class="select-custom mt-2" @bind="SelectedTaxId">
                    <option value="">Selecionar</option>
                    <option value="1">Fixa</option>
                    <option value="2">Variável</option>
                </select>
            </div>
        </div>

    </div>
</div>

@code {
    [Parameter] public string SelectedTaxId { get; set; }
    [Parameter] public EventCallback<string> OnTaxSelected { get; set; }
}
