<script>
    function toggleSearch() {
        var searchInput = document.querySelector('.search-input');
        if (searchInput.classList.contains('expand')) {
            searchInput.classList.remove('expand');
            searchInput.style.display = 'none';
        } else {
            searchInput.classList.add('expand');
            searchInput.style.display = 'inline-block';
        }
    }
</script>

@code {
    private string UserName { get; set; } = "Erick Frings";
    private string UserProfile { get; set; } = "Perfil 1";
    private string UserEntity { get; set; } = "Entidade 0";
    private string UserAvatar { get; set; } = "img/avatar.png";
}